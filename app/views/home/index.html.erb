<h1> Catálogo de Filmes </h1>
<div>
  <h2> Gêneros </h2>
  <% @genres.each do |genre| %>
  <%= link_to genre.name, genre %>
  <br/>
  <% end %>
</div>

<div>
  <h2> Diretores </h2>
  <% @directors.each do |director| %>
  <%= link_to director.name, director %>
  <br/>
  <% end %>
</div>

<div>
  <h2> Filmes </h2>
  <% @movies.each do |movie| %>
  <%= link_to movie.title, movie %>
  <% if movie.release_year > Date.today.year %>
    (Filme em produção)
  <% end %>  <br/>
  <% end %>
</div>